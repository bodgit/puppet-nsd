
pattern:
	name: "<%= @pattern %>"
<% if @include_pattern -%>
	include-pattern: "<%= @include_pattern %>"
<% end -%>
<% if @_allow_notify -%>
<%   @_allow_notify.each do |i| -%>
	allow-notify: <%= i %>
<%   end -%>
<% end -%>
<% unless @allow_axfr_fallback.nil? -%>
	allow-axfr-fallback: <%= @allow_axfr_fallback ? 'yes' : 'no' %>
<% end -%>
<% if @_notifies -%>
<%   @_notifies.each do |i| -%>
	notify: <%= i %>
<%   end -%>
<% end -%>
<% if @notify_retry -%>
	notify-retry: <%= @notify_retry %>
<% end -%>
<% if @outgoing_interface -%>
	outgoing-interface: <%= Array(@outgoing_interface).join('@') %>
<% end -%>
<% if @_provide_xfr -%>
<%   @_provide_xfr.each do |i| -%>
	provide-xfr: <%= i %>
<%   end -%>
<% end -%>
<% if @_request_xfr -%>
<%   @_request_xfr.each do |i| -%>
	request-xfr: <%= i %>
<%   end -%>
<% end -%>
<% if @rrl_whitelist -%>
<%   @rrl_whitelist.each do |i| -%>
	rrl-whitelist: <%= i %>
<%   end -%>
<% end -%>
<% if @zonestats -%>
	zonestats: "<%= @zonestats %>"
<% end -%>
